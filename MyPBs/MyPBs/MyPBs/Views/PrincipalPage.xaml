<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyPBs.Views.PrincipalPage"
             Title="My Personal Bests">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout
                VerticalOptions="CenterAndExpand">
                <Button
                    Command="{Binding ClickVer}"
                    Text="Ver Tempos"
                    TextColor="White"
                    BackgroundColor="CadetBlue"/>
                <Button
                    Text="Editar Tempos"
                    TextColor="White"
                    BackgroundColor="CadetBlue"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>